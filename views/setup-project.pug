						}
					}
					
					$("#new-ec-button").removeClass("disabled");
					$("#ec-tr-" + id).remove();
					setValidLabelsTimeout();
				});

				
				$("#ec-" + t.id + "-label").on('input', function() {
					$(this).removeAttr("title");
					t.label = $(this).val();
					$(this).removeClass("has_error");
					$("#ec-tr-" + t.id).removeClass("valid-row");
